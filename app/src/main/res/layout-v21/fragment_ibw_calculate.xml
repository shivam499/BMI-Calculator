<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/ageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:textSize="@dimen/genderText" />

        <RadioGroup
            android:id="@+id/radioG"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/ageText"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/maleIbw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/male"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/femaleIbw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/female"
                android:textSize="18sp" />

        </RadioGroup>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/heightTextIbw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/radioG"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editHeightIbw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/height_in_cms"
                android:focusableInTouchMode="true"
                android:inputType="numberDecimal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ageTextIbw"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_below="@id/heightTextIbw">

            <EditText
                android:id="@+id/editAgeIbw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/age"
                android:focusableInTouchMode="true"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/IbwCalculateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageTextIbw"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:elevation="4sp"
            android:text="@string/calculate"
            android:textAllCaps="false"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/IbwTextShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IbwCalculateButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            android:text="@string/ibw_info"
            android:textAlignment="center"
            android:textSize="@dimen/infoSize" />
    </RelativeLayout>
</ScrollView>
